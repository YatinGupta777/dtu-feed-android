<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_enter_cloud_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yatin.whatshappeningdtu.EnterCloudEvent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/nameEditText"
        android:textSize="20sp"
        android:hint="Name of Event"
        android:maxLines="1"
        android:maxLength="30"/>

    <EditText
        android:id="@+id/societyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nameEditText"
        android:hint="Name of Society/Group/Other"
        android:textSize="20sp"
        android:maxLines="1"
        android:maxLength="30"/>

    <EditText
        android:id="@+id/dateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/societyEditText"
        android:ems="10"
        android:hint="Date :"
        android:maxLength="30"
        android:maxLines="1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/timeEditText"
        android:layout_below="@+id/dateEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Time : (eg:5:20pm)"
        android:maxLines="1"
        android:maxLength="30"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/venueEditText"
        android:layout_below="@+id/timeEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Venue : (eg:B.R Audi)"
        android:maxLines="1"
        android:maxLength="40"/>

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/button5"
        android:onClick="save"
        android:layout_below="@+id/descriptionEditText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/descriptionEditText"
        android:hint="Description"
        android:layout_below="@+id/venueEditText"
        android:layout_alignParentStart="true"
        android:maxLines="3"
        android:scrollbars="vertical"
        />

    <Button
        android:text="Events On Cloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:onClick="enter"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="*"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/nameEditText"
        android:text="*"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/societyEditText"
        android:text="*"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/dateEditText"
        android:text="*"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/timeEditText"
        android:text="*"
        android:textColor="@android:color/holo_red_dark" />

</RelativeLayout>
